<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hsleiden.ikpmd3" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".boot.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".menu.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".menu.AccountActivity"
            android:label="@string/title_activity_account"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".menu.CreateActivity"
            android:label="@string/title_activity_create"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".menu.CreateTabActivity"
            android:label="@string/title_activity_create_tab"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".menu.DeleteTabActivity"
            android:label="@string/title_activity_delete_tab"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".menu.StatisticsActivity"
            android:label="@string/title_activity_statistics"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
